<table class="table table-striped">
	<thead>
		<tr>
			<th>No.</th>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each_with_index do |item, index| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.name %></td>
				<td>
					<%= link_to "Edit", edit_admin_item_path(item) %>
					<%= link_to "Show", admin_item_path(item) %>
					<%= link_to "Delete", admin_item_path(item.id), method: :delete, confirm: "Are you sure you want to delete this item?"  %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<div>
	<%= link_to "new", new_admin_item_path%>
</div>